<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Base.Theme.Emprestaí" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_dark_green</item>
        <item name="colorOnPrimary">@color/text_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background color for night mode -->
        <item name="android:windowBackground">#121212</item> <!-- Cor de fundo padrão do Material para noite -->
        <!-- Text color for night mode. -->
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Theme.Emprestaí" parent="Base.Theme.Emprestaí" />
</resources>